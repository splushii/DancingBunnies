<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/transactions_dialog_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorAccentDark"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/transactions_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorAccentDark"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/transactions_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="16dp"
            android:textColor="@color/colorTextOnAccent"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:text="@string/transactions"/>
        <LinearLayout
            android:id="@+id/transactions_dialog_apply"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/colorTextOnAccentSecondary"
                android:text="@string/transactions_apply"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_emoji_symbols_24"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/transactions_apply"
                app:tint="@color/colorTextOnAccentSecondary" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/transactions_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transactions_dialog_content_entries"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/windowBackground"/>
        <se.splushii.dancingbunnies.ui.FastScroller
            android:id="@+id/transactions_dialog_content_fastscroller"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/windowBackgroundLight"
            android:layout_gravity="end" />
    </LinearLayout>
    <TextView
        android:id="@+id/transactions_dialog_entries_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/transactions_empty"
        android:textSize="24sp"
        android:textColor="@color/text_secondary_active"
        android:padding="8dp"
        />
</LinearLayout>