<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meta_dialog_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_active_accent">
    <LinearLayout
        android:background="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/meta_dialog_list_key"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/text_secondary_active"
            android:fontFamily="sans-serif"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/meta_dialog_list_value"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/text_active_on_accent"
            android:fontFamily="sans-serif"
            android:textSize="14sp" />
        <AutoCompleteTextView
            android:id="@+id/meta_dialog_list_value_edit"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:background="@color/white_active_accent_light"
            android:imeOptions="actionDone"
            android:completionThreshold="1"
            android:hint="@string/meta_value"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:inputType="text|textFilter"
            android:autofillHints="" />
    </LinearLayout>
    <se.splushii.dancingbunnies.ui.TrackItemActionsView
        android:id="@+id/meta_dialog_item_actions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</FrameLayout>