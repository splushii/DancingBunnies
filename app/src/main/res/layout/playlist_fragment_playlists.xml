<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlist_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/playlist_new_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/overlayBackground"
        android:elevation="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="4sp"
            android:paddingBottom="4sp"
            android:paddingStart="16sp"
            android:paddingEnd="2dp"
            android:textColor="@color/colorPrimaryText"
            android:text="@string/playlist_new_playlist_name"/>
        <EditText
            android:id="@+id/playlist_new_playlist_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:imeOptions="actionDone"
            android:hint="@string/playlist_new_playlist_name_hint"
            android:paddingTop="4sp"
            android:paddingBottom="4sp"
            android:paddingStart="4sp"
            android:paddingEnd="16sp"
            android:inputType="text|textFilter"
            android:autofillHints="" />
    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playlist_recyclerview"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="96dp"
                android:clipToPadding="false"/>
            <se.splushii.dancingbunnies.ui.FastScroller
                android:id="@+id/playlist_fastscroller"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/windowBackgroundLight"
                android:layout_gravity="end" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>
