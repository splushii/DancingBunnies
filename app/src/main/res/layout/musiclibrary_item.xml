<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/library_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/musiclibrary_item_drawable">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/library_entry_title"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text_color"
            android:fontFamily="sans-serif"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/library_entry_album"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/secondary_text_color"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/library_entry_artist"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/secondary_text_color"
            android:gravity="end|center_vertical" />
    </LinearLayout>
    <se.splushii.dancingbunnies.ui.ItemActionsView
        android:id="@+id/library_entry_actions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</FrameLayout>