<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/nowplaying_current_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:background="@color/overlayBackground"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/nowplaying_current_playlist_info_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:clickable="true"
                android:background="?android:selectableItemBackground"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Playing from:"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:id="@+id/nowplaying_current_playlist_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimaryText"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/nowplaying_current_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_gesture_black_24dp"
                        android:tint="@color/colorAccent"
                        android:contentDescription="@string/playlist_random"/>
                    <ImageView
                        android:id="@+id/nowplaying_current_repeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_repeat_black_24dp"
                        android:tint="@color/colorAccent"
                        android:contentDescription="@string/playlist_repeat"/>
                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:id="@+id/nowplaying_current_playlist_deselect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_cancel_red_24dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/playlist_deselect"/>
        </LinearLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/nowplaying_recyclerview"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:clipToPadding="false"/>
                <se.splushii.dancingbunnies.ui.FastScroller
                    android:id="@+id/nowplaying_fastscroller"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/grey100"
                    android:layout_gravity="end" />
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <LinearLayout
            android:id="@+id/nowplaying_info"
            android:background="?android:selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <TextView
                android:id="@+id/nowplaying_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:textSize="16sp"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/nowplaying_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:textSize="24sp"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/nowplaying_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/nowplaying_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nowplaying_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginStart="16dp"/>
            <TextView
                android:id="@+id/nowplaying_buffering"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="@color/colorSecondaryText"
                android:text="@string/nowplaying_buffering"/>
            <TextView
                android:id="@+id/nowplaying_media_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/nowplaying_position"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginEnd="16dp"/>
            <ImageButton
                android:id="@+id/nowplaying_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:buttonBarButtonStyle"
                android:src="@drawable/quantum_ic_skip_previous_grey600_36"
                android:tint="@color/colorPrimaryText"
                android:contentDescription="@string/nowplaying_previous_contentdesc" />
            <ImageButton
                android:id="@+id/nowplaying_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:buttonBarButtonStyle"
                android:src="@drawable/quantum_ic_play_arrow_grey600_36"
                android:contentDescription="@string/nowplaying_play_pause_contentdesc" />
            <ImageButton
                android:id="@+id/nowplaying_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:buttonBarButtonStyle"
                android:src="@drawable/quantum_ic_skip_next_grey600_36"
                android:tint="@color/colorPrimaryText"
                android:contentDescription="@string/nowplaying_next_contentdesc" />
            <TextView
                android:id="@+id/nowplaying_duration"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>