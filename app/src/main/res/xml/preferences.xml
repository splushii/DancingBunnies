<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Backends"
        android:key="pref_backends" >
        <CheckBoxPreference
            android:key="pref_subsonic"
            android:title="@string/pref_subsonic"
            android:defaultValue="false" />
        <EditTextPreference
            android:dependency="pref_subsonic"
            android:key="pref_subsonic_url"
            android:title="@string/pref_subsonic_url" />
        <EditTextPreference
            android:dependency="pref_subsonic"
            android:key="pref_subsonic_usr"
            android:title="@string/pref_subsonic_usr" />
        <EditTextPreference
            android:dependency="pref_subsonic"
            android:password="true"
            android:key="pref_subsonic_pwd"
            android:title="@string/pref_subsonic_pwd" />
        <Preference
            android:dependency="pref_subsonic"
            android:key="pref_subsonic_refresh"
            android:title="@string/pref_subsonic_refresh" />
    </PreferenceCategory>
</PreferenceScreen>