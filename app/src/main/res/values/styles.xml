<resources>
    <style name="TabTheme" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="collapseIcon">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/colorPrimary</item>
        <item name="searchIcon">@drawable/ic_search_white_24dp</item>
        <item name="closeIcon">@drawable/ic_dialog_close_dark</item>
    </style>

    <style name="ActionModeTheme" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/ActionModeTheme.Title</item>
    </style>

    <style name="ActionModeTheme.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionModeTheme.Close" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SpinnerDropDownItemTheme" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:background">@color/grey100</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:textColorHint">@color/grey500</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back_white_24dp</item>
        <item name="actionModeStyle">@style/ActionModeTheme</item>
        <item name="tabStyle">@style/TabTheme</item>
        <item name="searchViewStyle">@style/SearchViewTheme</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemTheme</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <!-- colorForeground set for switch track -->
        <item name="android:colorForeground">@color/grey500</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.OnAccent" parent="AppTheme">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme.Base">
        <item name="android:textColorPrimary">@color/grey50</item>
    </style>
</resources>
