<resources>
    <style name="TabTheme" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorTextOnPrimary</item>
        <item name="subtitleTextColor">@color/colorTextOnPrimary</item>
    </style>

    <style name="ActionModeTheme" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/ActionModeTheme.Title</item>
    </style>

    <style name="ActionModeTheme.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <style name="ActionModeTheme.Close" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/colorTextOnPrimary</item>
    </style>

    <style name="SpinnerDropDownItemTheme" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:popupBackground">@color/popupBackground</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="PopupMenuTheme" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/popupBackground</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>
        <item name="android:textColorHint">@color/grey500</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/icon_on_primary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/icon_on_secondary</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back_white_24dp</item>
        <item name="actionModeStyle">@style/ActionModeTheme</item>
        <item name="tabStyle">@style/TabTheme</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemTheme</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="popupMenuStyle">@style/PopupMenuTheme</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.OnAccent" parent="AppTheme">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="android:textColorPrimary">@color/preferences_primary_text_color</item>
        <item name="android:textColorSecondary">@color/preferences_secondary_text_color</item>
    </style>
</resources>
