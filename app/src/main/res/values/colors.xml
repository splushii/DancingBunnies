<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="white">@android:color/white</color>
    <color name="grey">#EEEEEE</color>
    <color name="grey50">#FAFAFA</color>
    <color name="grey100">#F5F5F5</color>
    <color name="grey200">#EEEEEE</color>
    <color name="grey300">#E0E0E0</color>
    <color name="grey400">#BDBDBD</color>
    <color name="grey500">#9E9E9E</color>
    <color name="grey600">#757575</color>
    <color name="grey700">#616161</color>
    <color name="grey800">#424242</color>
    <color name="grey850">#262626</color>
    <color name="grey900">#212121</color>
    <color name="grey950">#121212</color>
    <color name="bluegrey900">#263238</color>
    <color name="black">#000000</color>
    <color name="red50">#ffebee</color>
    <color name="red100">#ffcdd2</color>
    <color name="red200">#ef9a9a</color>
    <color name="red300">#e57373</color>
    <color name="red800">#c62828</color>
    <color name="red900">#b71c1c</color>
    <color name="red">#F44336</color>
    
    <color name="colorLogo">#ccf2ff</color>

    <!-- Primary -->
    <color name="colorPrimary">#4CAF50</color>
    <color name="colorPrimaryDark">#087f23</color>
    <color name="colorPrimaryLight">#80e27e</color>
    <color name="colorPrimaryAlmostWindowBackground">#dbffd8</color>

    <!-- Accent -->
    <color name="colorAccent">#03A9F4</color>
    <color name="colorAccentDark">#007ac1</color>
    <color name="colorAccentLight">#67daff</color>
    <color name="colorAccentAlmostWindowBackground">#ccf2ff</color>
    <color name="colorAccentContrast">@color/colorAccent</color>

    <!-- Text -->
    <color name="colorText">@color/bluegrey900</color>
    <color name="colorTextSelected">@color/white</color>
    <color name="colorTextDisabled">@color/grey500</color>
    <color name="colorTextDisabledSelected">@color/grey700</color>
    <!-- Text on primary -->
    <color name="colorTextOnPrimary">@color/white</color>
    <!-- Text on accent -->
    <color name="colorTextOnAccent">@color/white</color>
    <color name="colorTextOnAccentSecondary">@color/grey300</color>
    <!-- Text secondary -->
    <color name="colorTextSecondary">@color/grey500</color>
    <color name="colorTextSecondarySelected">@color/colorAccent</color>
    <color name="colorTextSecondaryDisabled">@color/grey300</color>
    <color name="colorTextSecondaryDisabledSelected">@color/colorAccentLight</color>
    <!-- Text secondary on accent -->
    <color name="colorTextSecondaryOnAccentSelected">@color/colorAccentLight</color>
    <color name="colorTextSecondaryOnAccentDisabledSelected">@color/colorAccentAlmostWindowBackground</color>

    <!-- Icon -->
    <color name="colorIcon">@color/black</color>
    <color name="colorIconSelected">@color/colorAccent</color>
    <color name="colorIconDisabled">@color/grey500</color>
    <color name="colorIconDisabledSelected">@color/colorAccentLight</color>
    <!-- Icon on primary -->
    <color name="colorIconOnPrimary">@color/white</color>
    <color name="colorIconOnPrimaryDisabled">@color/colorPrimaryLight</color>
    <!-- Icon on accent -->
    <color name="colorIconOnAccent">@color/white</color>
    <color name="colorIconOnAccentDisabled">@color/colorAccentLight</color>
    <!-- Icon secondary -->
    <color name="colorIconSecondary">@color/grey500</color>
    <color name="colorIconSecondarySelected">@color/colorAccent</color>
    <color name="colorIconSecondaryDisabled">@color/grey300</color>
    <color name="colorIconSecondaryDisabledSelected">@color/colorAccentLight</color>

    <!-- Background -->
    <color name="windowBackground">@color/white</color>
    <color name="windowBackgroundAlternate">@color/grey50</color>
    <color name="windowBackgroundError">@color/red100</color>
    <color name="windowBackgroundErrorAlternate">@color/red200</color>
    <color name="windowBackgroundLight">@color/grey100</color>
    <color name="popupBackground">@color/white</color>
    <color name="overlayBackground">@color/grey100</color>

    <!-- Waveform -->
    <color name="waveFormRMS">@color/colorAccentAlmostWindowBackground</color>
    <color name="waveFormPeak">@color/grey500</color>
    <color name="waveFormRMSProgress">@color/colorAccentLight</color>
    <color name="waveFormPeakProgress">@color/colorAccentDark</color>
</resources>
